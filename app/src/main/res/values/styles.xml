
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuizTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/quiz_item_horz_margin</item>
        <item name="android:paddingRight">@dimen/quiz_item_horz_margin</item>
    </style>

    <style name="QuestionTitle" parent="QuizTextView">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/quiz_title_top_margin</item>
        <item name="android:paddingBottom">@dimen/quiz_title_bottom_margin</item>
    </style>

    <style name="QuestionRow" parent="QuizTextView">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/quiz_item_vert_margin</item>
        <item name="android:paddingBottom">@dimen/quiz_item_vert_margin</item>
    </style>

</resources>
